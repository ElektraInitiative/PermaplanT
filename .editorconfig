# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4
indent_size = tab
indent_style = space

[*.{html,css,scss,js,json,yml,yaml}]
tab_width = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
tab_width = 2
